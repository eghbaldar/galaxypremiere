                    type: 'POST',
                    data: postData,
                    url: 'MeHeader',
                    success: function (data) {
                        $('#dropzoneHeader').removeClass('hover').addClass('dropped').find('img').remove();
                        showfileheader(file); // showing file for demonstration ...
