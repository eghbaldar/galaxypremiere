                    },
                    error: function (req, res, err) {
                        alert('req' + req.responseText + 'res:' + res + 'err:' + err);
                    }
                });
            }
        }

        function showfileavatar(file) {
            var reader = new FileReader(file);
            reader.readAsDataURL(file);
            reader.onload = function (e) {
                $('#dropzoneAvatar div').html($('<img />').attr('src', e.target.result).fadeIn());
            }
        }
        function showfileheader(file) {
            var reader = new FileReader(file);
            reader.readAsDataURL(file);
            reader.onload = function (e) {
                $('#dropzoneHeader div').html($('<img />').attr('src', e.target.result).fadeIn());
